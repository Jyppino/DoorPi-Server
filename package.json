    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "express-validator": "^6.5.0",
    "morgan": "~1.9.1",
    "node-forge": "^0.9.1",
    "nodemon": "^2.0.4",
    "reflect-metadata": "^0.1.13",
    "sqlite3": "^4.2.0",
    "typeorm": "^0.2.25",
    "uuid": "^3.4.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.1",
    "@types/chai": "^4.2.11",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^5.2.7",
    "@types/mongoose": "^5.7.21",
    "@types/node": "^12.12.42",
    "@types/node-forge": "^0.9.3",
    "@types/sinon": "^7.5.2",
    "@types/uuid": "^3.4.9",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "mocha": "^6.2.3",
    "nyc": "^15.0.1",
    "prettier": "^1.19.1",
    "sinon": "^8.1.1",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.3"
  }
